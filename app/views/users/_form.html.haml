= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  %div.large-4.columns
    %label Name
    =f.text_field :name

  %div.large-4.columns
    %label Email
    =f.text_field :email

  %div.large-4.columns
    %label Password
    =f.password_field :password

  %div.large-4.columns
    %label Confirm
    =f.password_field :password_confirmation

  .actions
    = f.submit 'Sign Up'
